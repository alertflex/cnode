<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="alertflex_PU" transaction-type="JTA">
    <jta-data-source>jdbc/alertflex_auth_jndi</jta-data-source>
    <class>org.alertflex.mc.db.ScanJob</class>
    <class>org.alertflex.mc.db.ScriptJob</class>
    <class>org.alertflex.mc.db.SandboxJob</class>
    <class>org.alertflex.mc.db.SandboxTask</class>
    <class>org.alertflex.mc.db.Credential</class>
    <class>org.alertflex.mc.db.Hosts</class>
    <class>org.alertflex.mc.db.Node</class>
    <class>org.alertflex.mc.db.NodePK</class>
    <class>org.alertflex.mc.db.Groups</class>
    <class>org.alertflex.mc.db.Project</class>
    <class>org.alertflex.mc.db.HomeNetwork</class>
    <class>org.alertflex.mc.db.Response</class>
    <class>org.alertflex.mc.db.Sensor</class>
    <class>org.alertflex.mc.db.SensorPK</class>
    <class>org.alertflex.mc.db.Users</class>
    <class>org.alertflex.mc.db.Agent</class>
    <class>org.alertflex.mc.db.AgentSca</class>
    <class>org.alertflex.mc.db.AgentOpenscap</class>
    <class>org.alertflex.mc.db.AgentProcesses</class>
    <class>org.alertflex.mc.db.AgentPackages</class>
    <class>org.alertflex.mc.db.AgentVul</class>
    <class>org.alertflex.mc.db.DockerScan</class>
    <class>org.alertflex.mc.db.TrivyScan</class>
    <class>org.alertflex.mc.db.NmapScan</class>
    <class>org.alertflex.mc.db.NessusScan</class>
    <class>org.alertflex.mc.db.ZapScan</class>
    <class>org.alertflex.mc.db.AlertPriority</class>
    <class>org.alertflex.mc.db.SonarScan</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="afevents_PU" transaction-type="JTA">
    <jta-data-source>jdbc/afevents_auth_jndi</jta-data-source>
    <class>org.alertflex.mc.db.Alert</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
</persistence>
